<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.jokey.bingo.mapper.SuccessKilledMapper">
    <resultMap id="baseResult" type="com.jokey.bingo.entity.SuccessKilled">
        <id column="seckill_id" property="seckillId"/>
        <result column="user_phone" property="userPhone"/>
        <result column="state" property="state"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <insert id="insertSuccessKilled">
        insert ingore into success_killed(seckill_id,user_phone)
        values (#{seckillId},#{userPhone})
    </insert>
    <select id="queryByIdWithSeckill" resultMap="baseResult">
        <!--告诉mybatis把结果映射到SuccessKilled，同时映射seckill属性-->
        SELECT
        sk.seckill_id,
        sk.user_phone,
        sk.create_time,
        sk.state,
        s.seckill_id "seckill.seckill_id",
        s.name "seckill.name",
        s.number "seckill.number",
        s.start_time "seckill.start_time",
        s.end_time "seckill.end_time",
        s.create_time "seckill.create_time",
        FROM
        success_killed sk
        INNER JOIN seckill s ON s.seckill_id = sk.seckill_id
        WHERE
        sk.seckill_id = #{seckill_id}
    </select>

</mapper>